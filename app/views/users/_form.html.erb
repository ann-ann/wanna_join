<%= render 'shared/errors', object: user %>

<%= form_for user do |f| %>

  <fieldset class="form-group">
    <%= f.label :image_url %>
    <%= f.text_field :image_url, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, required: true, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :date_of_birth %>
    <%= f.date_field :date_of_birth, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :interests %>
    <%= f.text_field :interests, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, class: "form-control" %>
  </fieldset>

  <div class="form-actions">
    <%= f.submit 'Update', class: "btn btn-primary" %>
    <%= link_to 'Cancel', profile_users_path, class: "btn btn-link" %>
  </div>
<% end %>

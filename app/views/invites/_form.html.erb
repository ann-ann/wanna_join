<%= render 'shared/errors', object: invite %>

<%= form_for invite do |f| %>
  <fieldset class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, class: "form-control" %>
  </fieldset>
  <fieldset class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, required: true, class: "form-control"  %>
  </fieldset>

 <fieldset class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, required: true, class: "form-control" %>
  </fieldset>

 <fieldset class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, required: true, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, required: true, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :location_details %>
    <%= f.text_field :location_details, class: "form-control", placeholder: 'club, bar, hotel etc' %>
  </fieldset>

  <%= render partial: 'shared/map' %>
  <%=  render partial: 'shared/geocoder', locals: { lat: @invite.latitude , lng: @invite.longitude, location: @invite.location, location_details: @invite.location_details } %>

  <%= f.hidden_field :latitude %>

  <%= f.hidden_field :longitude %>

  <fieldset class="form-group">
    <%= f.label :date %>
    <%= f.datetime_field :date, class: "form-control" %>
  </fieldset>
  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Cancel', invites_path, class: "btn btn-link" %>
  </div>
<% end %>
